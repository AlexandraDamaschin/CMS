@model IEnumerable<CMS.Models.CMSModel.EventCategory>

@{
    ViewBag.Title = "Index";
}

<h2>Event Categories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Outdoor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Family)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Outdoor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Family)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EventCategoryId }) |
            @Html.ActionLink("Details", "Details", new { id=item.EventCategoryId }) |
