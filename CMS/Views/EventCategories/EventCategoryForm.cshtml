@model CMS.ViewModels.EventCategoryFormViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="createOne">
    <h2>New Event Category</h2>
    @using (Html.BeginForm("Save", "EventCategories"))
    {
        @Html.ValidationSummary(true, "Please fix the following errors.")
        <div class="formStyle">
            <div class="form-group">
                @Html.LabelFor(m => m.EventCategory.Name)
                @Html.TextBoxFor(m => m.EventCategory.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.EventCategory.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.EventCategory.Icon)
                @Html.TextBoxFor(m => m.EventCategory.Icon, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.EventCategory.Icon)
            </div>
            @Html.HiddenFor(m => m.EventCategory.EventCategoryId)
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-primary">Save</button>
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary" })
            </div>
            }
        </div>
    @section scripts
{
        @Scripts.Render("~/bundles/jqueryval")
    }
